
public class Board {
	private char[][] board;
	private final char EMPTY = ' ';
	
	
	public Board(){
		board = new char[3][3];
		for(int i = 0; i < 3; i++){
			for(int j = 0; j < 3; j++){
				board[i][j] = 'X';
			}
		}
	}
	
	public void displayBoard(){
		for(int i = 0; i < board.length; i++){
			for(int j = 0; j < board.length; j++){
				System.out.print(board[i][j]);
				if(j != board.length-1){
					System.out.print("|");
				}
			}
			System.out.println();
			System.out.print("------");
		}
	}
}
